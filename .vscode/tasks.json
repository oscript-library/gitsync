{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Testing project (opm test)",
            "type": "shell",
            "args": [
                "oscript",
                "opm",
                "test"
            ],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": {
                "fileLocation": "absolute",
                "pattern": {
                    "regexp": "{Модуль\\s+(.+)\\s\\/\\s.*:\\s+(\\d+)\\s+\\/\\s+([^{]*)",
                    "file": 1,
                    "location": 2,
                    "message": 3
                }
            }
        },
        {
            "label": "Testing project",
            "type": "shell",
            "args": [
                 "1testrunner",
                "-runall",
                "${workspaceRoot}/tests"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "group": "test",
            "problemMatcher": {
                "fileLocation": "absolute",
                "pattern": {
                    "regexp": "{Модуль\\s+(.+)\\s\\/\\s.*:\\s+(\\d+)\\s+\\/\\s+([^{]*)",
                    "file": 1,
                    "location": 2,
                    "message": 3
                }
            }
        },
        {
            "label": "Testing current test-file",
            "type": "shell",
            "args": [
                 "1testrunner",
                "-run",
                "${file}",
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "group": "test",
            "problemMatcher": {
                "fileLocation": "absolute",
                "pattern": {
                    "regexp": "{Модуль\\s+(.+)\\s\\/\\s.*:\\s+(\\d+)\\s+\\/\\s+([^{]*)",
                    "file": 1,
                    "location": 2,
                    "message": 3
                }
            }
        },
        {
            "label": "Exec all features",
            "type": "shell",
            "args": [
                 "1bdd",
                "${workspaceRoot}/features",
                "-out", 
                "${workspaceRoot}/exec.log"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "group": "test",
            "problemMatcher": {
                "fileLocation": "absolute",
                "pattern": {
                    "regexp": "{Модуль\\s+(.+)\\s\\/\\s.*:\\s+(\\d+)\\s+\\/\\s+([^{]*)",
                    "file": 1,
                    "location": 2,
                    "message": 3
                }
            }
        },
        {
            "label": "Exec feature",
            "type": "bsl",
            "args": [
				"/c",
				"1bdd",
				"${file}",
				"-fail-fast",
				"-require",
				"${workspaceRoot}/features",
				"-out",
				"${workspaceRoot}/exec.log"
			],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "group": "test",
            "problemMatcher": {
                "fileLocation": "absolute",
                "pattern": [
                {
                    "regexp": "{Модуль\\s+(.+)\\s\\/\\s.*:\\s+(\\d+)\\s+\\/\\s+([^{]*)",
                    "file": 1,
                    "location": 2,
                    "message": 3
                }
                ]
            }
        },
        {
            "label": "Generate feature steps",
            "type": "shell",
            "args": [
                 "1bdd",
                "gen",
                "${file}",
                "-out", 
                "${workspaceRoot}/exec.log"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "group": "build",
            "problemMatcher": {
                "fileLocation": "absolute",
                "pattern": {
                    "regexp": "{Модуль\\s+(.+)\\s\\/\\s.*:\\s+(\\d+)\\s+\\/\\s+([^{]*)",
                    "file": 1,
                    "location": 2,
                    "message": 3
                }
            }
        },
        {
            "label": "OneScript: compile",
            "type": "shell",
            "args": [
                 "oscript",
                 "-encoding=utf-8",
                "-compile",
                "${file}"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "group": "build",
        },
        {
            "label": "OneScript: check",
            "type": "shell",
            "args": [
                 "oscript",
                 "-encoding=utf-8",
                "-check",
                "${file}"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "group": "test",
        },
        {
            "label": "OneScript: make",
            "type": "shell",
            "args": [
                 "oscript",
                 "-encoding=utf-8",
                "-make",
                "${file}",
                "${fileBasename}.exe"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "group": "build",
        },
        {
            "label": "OneScript: run",
            "type": "shell",
            "args": [
                 "oscript",
                 "-encoding=utf-8",
                "${file}"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "group": "build",
            "problemMatcher": {
                "fileLocation": "absolute",
                "pattern": {
                    "regexp": "^{Модуль\\s+(.*)\\s\\/\\s.*:\\s+(\\d+)\\s+\\/\\s+(.*)}$",
                    "file": 1,
                    "location": 2,
                    "message": 3
                }
            }
        }
    ]
}